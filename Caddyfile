sht.mohsindev.com {
  # Since you're using Cloudflare, we'll disable Caddy's automatic HTTPS
  tls internal

  # Proxy all requests to your Next.js application
  reverse_proxy localhost:3000
}

# Handle subdomains
*.sht.mohsindev.com {
  tls internal

  reverse_proxy localhost:3000 {
    header_up Host {host}
  }
}